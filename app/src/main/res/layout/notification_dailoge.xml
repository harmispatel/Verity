<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textview_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="@string/app_name_full"
        android:textSize="25sp"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/textview_message_content"

        android:background="#b4b4b4"/>

    <Button
        android:id="@+id/ok_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/edittext_bg"
        android:textColor="#ff5064"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="10dp"

        android:text="OK" />

    <TextView
        android:id="@+id/textview_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textview_message_text"
        android:textColor="#b4b4b4"
        android:textSize="22sp"
        android:gravity="center|left"

        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>