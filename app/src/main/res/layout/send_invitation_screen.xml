<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_blue_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">



            <LinearLayout
                android:id="@+id/layout_locations_summary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/imageview_share"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/invite_button"/>

                <TextView
                    android:id="@+id/textview_share_content"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/click_to_share"
                    android:textColor="@color/White"


                    android:textSize="30sp"/>


            </LinearLayout>

    <TextView
        android:id="@+id/textview_referral_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:textColor="@color/menu_blue_bg"
        android:background="@color/White"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"


        android:textSize="30sp"/>

</LinearLayout>